{
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=develop nodemon",
    "build": "bun run build:server && vite build --mode client && bun run build:css",
    "build:prod": "NODE_ENV=production bun run build",
    "build:server": "vite build --ssr src/index.ts --outDir dist",
    "build:css": "bunx tailwindcss -i ./src/main.css -o ./public/static/main.css",
    "clean": "bunx rimraf dist && bunx rimraf public/static",
    "start": "NODE_ENV=production node ./dist/index.js"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.12",
    "@libsql/client": "^0.14.0",
    "axios": "^1.6.5",
    "better-sqlite3": "^11.6.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "esm": "^3.2.25",
    "express": "^4.18.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.1.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.6",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.28.1",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.49",
    "rimraf": "^3.0.2",
    "svelte": "^4.2.9",
    "svelte-check": "^3.6.3",
    "svelte-spa-router": "^4.0.1",
    "tailwindcss": "^3.4.15",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.2.11"
  }
}
