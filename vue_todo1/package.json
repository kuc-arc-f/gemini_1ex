{
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=develop nodemon",
    "build": "bun run clean && bun run build:server && vite build --mode client && bun run build:css",
    "build:server": "vite build --ssr src/index.ts --outDir dist",
    "build:css": "bunx tailwindcss -i ./src/main.css -o ./public/static/main.css",
    "start": "NODE_ENV=develop bun ./dist/index.js",
    "clean": "rimraf dist && rimraf public/static"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "axios": "^1.6.5",
    "better-sqlite3": "^11.6.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.37.0",
    "esm": "^3.2.25",
    "express": "^4.18.2",
    "pinia": "^2.3.0",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.6",
    "@vitejs/plugin-vue": "^5.2.1",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.29.1",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.49",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.4.16",
    "typescript": "~5.6.2",
    "vite": "^6.0.1",
    "vue-tsc": "^2.1.10"
  }
}
